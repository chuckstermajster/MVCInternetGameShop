@model MVCInternetGamesShop.ViewModels.HomeViewModel
@using MVCInternetGamesShop.Infrastructure

@{
    ViewBag.Title = "Home Page";
}

<div id="banner">
    <img src="#" />
    <h1>BANNER PLACEHOLDER</h1>
</div>



<div class="bestseller">
    <h1>Bestsellery</h1>
    <div class="row">
        <div class="col-md-4">
            @foreach (var newest in Model.PCBestsellers)
            {
                <li>
                    <h1>@newest.Name</h1>
                    <img src="@Url.PCCoversPath(newest.ImageName)" />
                </li>
            }
        </div>
        <div class="col-md-4">

        </div>
        <div class="col-md-4">

        </div>
    </div>
</div>