<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    

    <link href="~/Scripts/qTip/jquery.qtip.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")    
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="navbar navbar-inverse navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                @Html.ActionLink("Games Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Platform", "Home", new { id = 1 })">Gry PS4</a></li>
                    <li><a href="@Url.Action("Platform", "Home", new { id = 2 })">Gry PC</a></li>
                    <li><a href="@Url.Action("Platform", "Home", new { id = 3 })">Gry XBOX ONE</a></li>
                    @if (User.IsInRole("CanManageStore"))
                    {
                    <li><a href="/Games/New" class="btn">Dodaj grę...</a></li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Design and Created by Mateusz Żak</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")  
    <script src="~/Scripts/qTip/jquery.qtip.js"></script>
    <script>$('.tooltip-message').qtip({ 
    content: {
        text: "Obrazki wrzucamy do katalogu /Content/GameCovers/.../tu. Jeśli nie masz obrazka, zostaw to pole puste"
    }
})</script>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/CartManagment")
    @RenderSection("scripts", required: false)
</body>
</html>
